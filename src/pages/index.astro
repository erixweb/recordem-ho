---
import Layout from "../layouts/layout.astro"
---

<Layout title="Recordem-ho | Història">
	<header class="min-h-[100vh] w-full relative bg-black">
		<img
			data-src="https://i.ibb.co/6JnLb4P/els-segadors-catalunya.webp"
			alt=""
			class="w-full h-[100vh] object-cover absolute top-0 left-0 opacity-50 z-[1]"
		/>
		<div
			class="flex flex-col justify-center items-center text-white z-20 min-h-[100vh] w-full absolute top-0 left-0"
		>
			<div class="px-[15px] max-w-[1050px] text-start">
				<span class="py-[8px] px-[15px] bg-zinc-900 rounded-full">Història</span>
				<h1 class="font-bold text-[50px] max-w-[700px]">
					Corpus de Sang i Guerra del Segadors
				</h1>
				<p class="text-[20px] text-gray-300 w-full">
					Descobreix la història de Catalunya sense filtres.
				</p>
			</div>
		</div>
	</header>
	<main class="p-[20px] max-w-[1050px]">
		<section id="llegeix">
			<article>
				<a href="/articles/corpus-de-sang/ca">Corpus de Sang 1640</a>
			</article>
		</section>
	</main>
</Layout>
